{
  "handler": "Microsoft.Compute.MultiVm",
  "version": "0.1.2-preview",
  "parameters": {
    "basics": [
      {
        "name": "type",
        "type": "Microsoft.Common.DropDown",
        "label": "Deployment Type",
        "defaultValue": "AksHcionAzureVM",
        "constraints": {
          "allowedValues": [
            {
              "label": "Aks (Aks Hci) on Azure VM (selfhost)",
              "value": "AksHcionAzureVM"
            },
            {
              "label": "Azure Stack Hci on Azure VM (Nested)",
              "value": "AzureStackHci"
            }
          ]
        }
      },
      {
        "name": "adminUsername",
        "type": "Microsoft.Compute.UserNameTextBox",
        "label": "VM username",
        "toolTip": "Administrative username for the virtual machines.",
        "osPlatform": "Windows",
        "constraints": {
          "required": true,
          "regex": "^[a-z][-a-z0-9]*$"
        }
      },
      {
        "name": "adminCredentials",
        "type": "Microsoft.Compute.CredentialsCombo",
        "label": {
          "authenticationType": "Authentication type",
          "password": "Password",
          "confirmPassword": "Confirm password"
        },
        "constraints": {
          "required": true
        },
        "options": {
          "hideConfirmation": false
        },
        "osPlatform": "Windows"
      }
    ],
    "steps": [
      {
        "name": "Deployment Parameters",
        "label": "Deployment Parameters",
        "subLabel": {
          "preValidation": "Choose virtual machine size",
          "postValidation": "Done"
        },
        "bladeTitle": "Deployment Parameters",
        "elements": [
          {
            "name": "vmSize",
            "type": "Microsoft.Compute.SizeSelector",
            "label": "VM size",
            "toolTip": "The size of virtual machines.",
            "recommendedSizes": [
              "Standard_E8s_v4",
              "Standard_E16s_v4",
              "Standard_E20s_v4",
              "Standard_E32s_v4"
            ],
            "osPlatform": "Windows",
            "imageReference": {
              "publisher": "windows",
              "offer": "AksHcionAzureVM",
              "sku": "AksHcionAzureVM"
            }
          }
        ]
      }
    ],
    "outputs": {
      "DSC": "[basics('type')]",
      "userName": "[basics('adminUsername')]",
      "pwd": "[basics('adminCredentials')]"
    }
  }
}
